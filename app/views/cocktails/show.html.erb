<h1><%= @cocktail.name.capitalize %></h1>
<p>Find me in app/views/cocktails/show.html.erb</p>

<%= link_to "Back to list", cocktails_path %>
<%= link_to "Add doses", new_cocktail_dose_path(@cocktail) %>


<ul>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %> / <%= dose.description %></li>
  <%= link_to "delete", dose_path(dose), method: :delete, data: { confirm: "really MF?" } %>
<% end %>
</ul>


