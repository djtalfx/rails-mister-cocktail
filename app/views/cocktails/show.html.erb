<div class="container">
  <%= link_to "Back to list", cocktails_path %>
  <div><%= link_to "Add doses", new_cocktail_dose_path(@cocktail) %></div>

  <div class="card-product">

  <h1><%= @cocktail.name.capitalize %></h1>
    <div class="card-product-infos">

    <% @cocktail.doses.each do |dose| %>
      <h2><%= dose.description %> dose(s) de <%= dose.ingredient.name %></h2>
      <p class="action"><%= link_to "delete", dose_path(dose), method: :delete, data: { confirm: "really MF?" } %></p>
    <% end %>
    </div>
  </div>
</div>

